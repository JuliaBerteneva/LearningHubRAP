projection;
strict ( 2 );
use draft;
use side effects;

define behavior for zlh_c_course alias Course
{
  use create;
  use update;
  use delete;

  use action assignMeToCourse;
  use action releaseCourse;

  use action Resume;
  use action Edit;
  use action Activate;
  use action Discard;
  use action Prepare;

  use association _materials { create; with draft; }
}

define behavior for zlh_c_material alias Material
{
  use update;
  use delete;

  use association _course { with draft; }
}